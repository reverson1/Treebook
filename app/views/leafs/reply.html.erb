<%= params.inspect %>
<div class="row">
  <div class="span12">
    <div class="leaf-index" style="padding:0;">
		  <table width="100%" style="height:100%; background-color:#FFFFFF;">
	      <thead>
	        <tr>
	          <th align="center"  class="leaf header">
	            Reply Leaf
	          </th>
	        </tr>
	      </thead>
	      <tbody>
	      		<tr>	      		
	      		<td height="100%" style="padding-top:15px;padding-bottom:10px;">
	      			Original:
							<div class="form-vertical" style="margin: 10px;">
								<%= @original_leaf.content %>
							</div>
							<br/>
							</div>
						</td>
					</tr>
	      	<tr>	      		
	      		<td align="center" height="100%">
							<%= simple_form_for(@leaf, html: {class: "form-vertical"}) do |f| %>
								<% if @leaf.errors.any? %>
									<div id="error_explanation">
									  <h2><%= pluralize(@leaf.errors.count, "error") %> prohibited this leaf from being saved:</h2>
									  <ul>
									  <% @leaf.errors.full_messages.each do |msg| %>
									    <li><%= msg %></li>
									  <% end %>
									  </ul>	
									</div>
								<% end %>

						  	<%= f.input :content, :input_html => {:rows => 15, :style => 'width: 90%'}, :autofocus => true, label: false %>

					    	<%= f.submit 'Plant Reply Leaf', :class => 'btn btn-primary' %>
								<%= link_to "Cancel", feed_path, :class => 'btn btn-primary' %>		
							<% end %>	
						</td>
					</tr>
				</tbody>
			</table>
    </div>
  </div>
</div>   