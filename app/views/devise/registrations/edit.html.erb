<div class="row">
<div class="span1"><br/></div>
<div class="status-index span10">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class:"form-horizontal", :method => :put}) do |f| %>
    <%= devise_error_messages! %>
    <fieldset class="well">
      <legend class="treebook-header">Edit <%= resource_name.to_s.humanize %></legend>

      <div class="span6">
       
            <%= f.input :email, :autofocus => true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>                  

            <%= f.input :password, :label => "New Password", :autocomplete => "off", :hint => "Leave blank to not change it" %>
            <%= f.input :password_confirmation %>
            <%= f.input :current_password, :hint => "Your password confirms your changes" %>
          
        <div align='center'>
          <%= f.button :submit, "Update", :class => 'btn btn-primary' %>
        </div>
      </div>
      <div class="span1"><br/></div>
      <div class="span3" align="center">
        <div class="well">
          <div>
          <img src="<%= @user.gravatar_url %>"/>
          </div>
          <br/>
          <h4>Close my account</h4>            
          <%= link_to 'Close', registration_path(resource_name), :data =>  {:confirm => "Are you sure?"} , :method => :delete, :class => 'btn btn-primary' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
      <div class="span1"><br/></div>
    </div>