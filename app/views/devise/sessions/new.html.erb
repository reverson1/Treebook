<div style="padding-top: 40px;">
  <div class ="span1"><br/></div>
  <div class="span10">
    <div class="leaf-index" style="padding:0;">
      <table width="100%" style="height:100%; background-color:#FFFFFF;">
        <thead>
          <tr>
            <th colspan = "2" align="center"  class="leaf header">
              Sign In
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="span3 well" align="center" style="vertical-align:center;height:100%;">   
              <%= image_tag 'tree.png' %> 
              <br/> 
              <h2>Welcome to Treebook!</h2>                          
            </td>

            <td class="span7" style="vertical-align:middle;margin-top:20px;">
              <br/>
              <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        
	              <%= devise_error_messages! %>
						    <%= f.input :email, :required => false, :autofocus => true %>
						    <%= f.input :password, :required => false %>
						    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>

	              <div align="center">
						    	<%= f.button :submit, "Sign in", :class => 'btn btn-primary' %>
						    	<%= link_to "Cancel", "..", :class => 'btn btn-primary'  %>
						  		<br/><br/>
						  		<%= render "devise/shared/links" %>	
	              </div>
             	<% end %> 

            </td>
          </tr> 
        </tbody>
      </table>
    </div>
  </div>
  <div class ="span1"><br/></div>
</div>