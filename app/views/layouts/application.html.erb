<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">		
			<div class="container">

				<% if user_signed_in? %>
					<a href="<%= '../' + current_user.profile_name %>" class="brand"> Treebook</a>
				<% else %>
					<a href="<%= register_path %>" class="brand"> Treebook</a>
				<% end %>
				<%= link_to 'All Leaves', feed_path , :class => 'btn btn-primary'  %>
				<ul class="nav pull-right">
					<% if user_signed_in? %>
						<div class="btn-group">
			                <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><%= current_user.fullname %> <span class="caret"></span></button>
			                <ul class="dropdown-menu">
							  <li><%= link_to 'My Leaves', '../' + current_user.profile_name %></li>
			                  <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
			                  <li><%= link_to 'Log out', logout_path %></li>
			                </ul>
              			</div>												
					<% else %>				
						<% if request.path != new_user_registration_path && request.path != user_registration_path && request.path != register_path %>
						<div class="btn-group">							
			            	<%= link_to 'Register', register_path, {:class => 'btn btn-primary'} %>
              			</div>
              			<% end %>
	              		<% if request.path != new_user_session_path && request.path != login_path %>
	              			<div class="btn-group">							
				            	<%= link_to 'Log in', login_path, {:class => 'btn btn-primary'} %>
	              			</div>
            			<% end %>
					<% end %>
				</ul>
			</div>
		</div> 	
	</div>
	<div class="container" >
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>">				
				<%= message %>
				<button class="close" data-dismiss="alert">x</button>
			</div>
		<% end %>

		<%= yield %>
	</div>
</body>
</html>
