<div class="row">
    <div class="status-index span12">
    <h2>New Leave</h2>
	<%= simple_form_for(@status, html: {class: "form-horizontal"}) do |f| %>
		<% if @status.errors.any? %>
			<div id="error_explanation">
			  <h2><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h2>

			  <ul>
			  <% @status.errors.full_messages.each do |msg| %>
			    <li><%= msg %></li>
			  <% end %>
			  </ul>
			</div>
		<% end %>
		<fieldset>
		  	<%= f.input :user_id, :input_html => { :value => current_user.id}, :as => :hidden %>  
		  	<%= f.input :content, :input_html => {:rows => 15, :style => 'width: 90%'}, :autofocus => true%>
		</fieldset>
		<div align="center" class="form-actions-center">
	    	<%= f.submit 'Submit New Leave', :class => 'btn btn-primary' %>
	    	<%= link_to "Cancel", :back, :class => 'btn btn-primary'  %>
	  	</div>
	<% end %>	
  </div>
</div>