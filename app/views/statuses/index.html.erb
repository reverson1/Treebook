<div class="row">
  <div class="span12">
    <div class="status-index">
      <fieldset class="well">
        <legend class="treebook-header">Status List</legend>    

        <% @statuses.each do |status| %>
          <div class="well">
            <div class="status">
              <strong>
                <% if !status || !status.user %>
                  Unknown
                <% else %>
                  <%= status.user.fullname %>
                <% end %>
              </strong>
              <p><%= status.content %></p>
              <div class="meta">
                <%= link_to time_ago_in_words(status.created_at) + " ago", status ,:class => 'btn btn-primary btn-mini' %>
                <% if user_signed_in? %>
                  <span class="admin">
                    <%= link_to "Edit", edit_status_path(status),:class => 'btn btn-primary btn-mini' %>
                    <%= link_to "Destroy", status, method: :delete, data: { confirm: "Are you sure you want to delete this entry?"},:class => 'btn btn-primary btn-mini' %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        <% if user_signed_in? %>
          <div align="center">
            <%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>
          </div>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>